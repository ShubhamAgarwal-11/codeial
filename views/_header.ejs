<header>
    <nav>
        <div class="heading">
            <a href="/">
                Codeial
            </a>
        </div>
        <div class="auth-link">
            <ul>
                <% if(locals.user){ %>
                    <li>
                        <a href="/users/profile">
                            <%= user.name%>
                        </a>
                    </li>
                    <li>
                        <a href="/users/sign-out">Sign Out</a>
                    </li>
                <% }else { %>
                    <li class="sign-in">
                        <a href="/users/sign-in">Sign In</a>
                    </li>

                    <li class="sign-up">
                        <a href="/users/sign-up">Sign Up</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>
</header>